---
interface Props {
  title: string;
  excerpt: string;
  imageAlt: string;
  imageUrl: string;
  pubDate: string;
  size?: "small" | "medium" | "large";
}

import { getImageHeight } from "../helpers/utils";
const { title, excerpt, imageUrl, imageAlt, pubDate, size } = Astro.props;
const height = getImageHeight(size);
---

<div class="grid-item bg-white rounded-xl mb-6 overflow-hidden shadow">
  <a href="/about">
    <div class="group">
      <div class=`h-${height} overflow-hidden bg-center bg-cover relative`>
        <img
          alt={imageAlt}
          src={imageUrl}
          class=`h-${height} w-full object-cover smooth bg-gray-100 text-gray-100`
        />
        <div
          class="absolute top-0 left-0 opacity-0 group-hover:opacity-100 w-full h-full bg-black/60 transition duration-300 ease-out"
        >
          <div class="flex h-full justify-center items-center">
            <div
              class="text-white text-md font-bold translate-y-4 group-hover:translate-y-0 transition duration-300 ease-out"
            >
              View More
            </div>
          </div>
        </div>
      </div>
      <div class="p-6">
        <h3 class="text-xl mb-4">{title}</h3>
        <p>{excerpt}</p>
        <div class="mt-4 text-xs text-gray-400">
          <span>{pubDate}</span>
        </div>
      </div>
    </div>
  </a>
</div>
