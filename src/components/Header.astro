---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, MENU_ITEMS } from "../consts";
---

<header>
  <nav class="my-14">
    <div class="flex flex-wrap justify-between items-center">
      <div>
        <a href="/">
          <span class="text-2xl font-medium">{SITE_TITLE}</span>
        </a>
      </div>

      <button
        id="burger"
        class="md:hidden"
        aria-controls="menu"
        aria-expanded="false"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>

      <ul
        id="menu"
        class="w-full md:w-auto hidden md:flex mt-6 md:mt-0 flex flex-col md:flex-row justify-between gap-6 md:gap-12 text-xl underline text-gray-600 hover:text-black transition duration-300"
      >
        {
          MENU_ITEMS.map((item) => {
            if (item.url.trim() === "") return null;

            let attributes = {};
            if (item.newTab) attributes = { target: "_blank" };

            return (
              <li>
                <a href={item.url} {...attributes}>
                  {item.name}
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
  </nav>
</header>
