---
import Layout from "../layouts/Layout.astro";
import { formatDate } from "../helpers/utils.js";

const { title, imageUrl, imageAlt, pubDate } = Astro.props;

let formattedDate = formatDate(pubDate);
---

<Layout>
  <Fragment slot="body">
    <article class="max-w-screen-lg mx-auto mb-12">
      <div class="text-center mb-12">
        <h3 class="text-4xl leading mb-2">{title}</h3>
        <span class="text-gray-600">{formattedDate}</span>
      </div>

      <div class="mb-12">
        <img alt="" src={imageUrl} class="w-full h-auto rounded-xl" />
      </div>

      <div class="max-w-prose mx-auto text-xl prose prose-img:rounded-md">
        <slot />
      </div>
    </article></Fragment
  >
</Layout>
