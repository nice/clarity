---
interface Props {
  title: string;
  imageUrl: string;
  imageAlt: string;
  pubDate: string;
}

import Layout from "../layouts/Layout.astro";

const { title, imageUrl, imageAlt, pubDate } = Astro.props;
---

<Layout>
  <div class="max-w-screen-lg mx-auto">
    <div class="text-center mb-12">
      <h3 class="text-4xl leading mb-2">Just another post</h3>
      <span class="text-gray-600">March 10, 1992</span>
    </div>

    <div class="rounded-xl overflow-hidden mb-12">
      <img alt="" src="https://picsum.photos/1280/720" class="w-full h-auto" />
    </div>

    <div class="max-w-prose mx-auto text-xl">
      <slot />
    </div>
  </div>
</Layout>
