---
import "../styles/global.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <slot name="head" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />

    <noscript>
      <style>
        img {
          opacity: 1 !important;
        }
      </style>
    </noscript>
  </head>

  <body class="font-body">
    <div class="container mx-auto px-4">
      <Header />

      <main class="min-h-96">
        <slot name="body" />
      </main>

      <hr class="border-1 border-dashed border-gray-300 my-6" />

      <Footer />
    </div>
  </body>

  <script is:inline src="/js/colcade.min.js"></script>
  <script is:inline src="/js/grid.js"></script>
  <script is:inline src="/js/appear.js"></script>
  <script is:inline src="/js/menu.js"></script>
</html>
