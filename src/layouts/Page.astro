---
import Layout from "../layouts/Layout.astro";

const { title, pubDate, imageUrl, imageAlt } = Astro.props;
---

<Layout>
  <div class="max-w-screen-lg mx-auto">
    <div class="text-center mb-12">
      <h3 class="text-4xl leading mb-2">{title}</h3>
      <span class="text-gray-600">{pubDate}</span>
    </div>

    <div class="mb-12">
      <img alt={imageAlt} src={imageUrl} class="w-full h-auto rounded-xl" />
    </div>

    <div class="max-w-prose mx-auto text-xl prose prose-img:rounded-md">
      <slot />
    </div>
  </div>
</Layout>
